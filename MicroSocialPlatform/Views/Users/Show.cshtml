@model MicroSocialPlatform.Models.ApplicationUser

@{
    ViewData["Title"] = "User Details";

    var roles = ViewBag.Roles as IEnumerable<string> ?? Enumerable.Empty<string>();
    var currentUser = ViewBag.UserCurent as MicroSocialPlatform.Models.ApplicationUser;

    bool isSameUser = currentUser != null && (string)Model.Id == (string)currentUser.Id;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-7 col-xl-6">

            <!-- HEADER -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">User Details</h2>

                <a asp-controller="Users" asp-action="Index" class="btn btn-outline-secondary btn-pill">
                    <i class="bi bi-arrow-left me-2"></i>Back
                </a>
            </div>

            <!-- CARD -->
            <div class="user-card">
                <div class="user-card-body">

                    <!-- MAIN INFO -->
                    <div class="user-row">
                        <div class="user-icon">
                            <i class="bi bi-person"></i>
                        </div>
                        <div class="flex-grow-1">
                            <div class="user-label">Username</div>
                            <div class="user-value">@Model.UserName</div>
                        </div>
                    </div>

                    <div class="user-divider"></div>

                    <div class="user-row">
                        <div class="user-icon">
                            <i class="bi bi-envelope"></i>
                        </div>
                        <div class="flex-grow-1">
                            <div class="user-label">Email</div>
                            <div class="user-value">@Model.Email</div>
                        </div>
                    </div>

                    <!-- ROLES -->
                    @if (roles.Any())
                    {
                        <div class="user-divider"></div>

                        <div class="user-row align-items-start">
                            <div class="user-icon">
                                <i class="bi bi-shield-lock"></i>
                            </div>
                            <div class="flex-grow-1">
                                <div class="user-label mb-2">Roles</div>

                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var role in roles)
                                    {
                                        <span class="role-pill">@role</span>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>

        </div>
    </div>
</div>

<style>
    body {
        background: #f6efe3;
    }

    .user-card {
        border-radius: 16px;
        background: rgba(255,255,255,.92);
        border: 1px solid rgba(0,0,0,.06);
        box-shadow: 0 10px 26px rgba(0,0,0,.06);
        transition: transform .15s ease, box-shadow .15s ease;
    }

        .user-card:hover {
            transform: translateY(-1px);
            box-shadow: 0 14px 34px rgba(0,0,0,.08);
        }

    .user-card-body {
        padding: 20px;
    }

    .user-row {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .user-icon {
        width: 38px;
        height: 38px;
        border-radius: 999px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #0d6efd;
        background: rgba(13,110,253,.12);
        flex: 0 0 auto;
        font-size: 1.05rem;
    }

    .user-label {
        font-weight: 800;
        color: #111827;
        line-height: 1.1;
    }

    .user-value {
        color: #6c757d;
        margin-top: 2px;
    }

    .user-divider {
        height: 1px;
        background: rgba(0,0,0,.06);
        border-radius: 999px;
        margin: 14px 0;
    }

    .role-pill {
        display: inline-flex;
        align-items: center;
        border-radius: 999px;
        padding: .35rem .7rem;
        font-weight: 700;
        font-size: .9rem;
        color: #111827;
        background: rgba(13,110,253,.12);
        border: 1px solid rgba(13,110,253,.20);
    }

    .btn-pill {
        border-radius: 999px !important;
        font-weight: 700;
        padding: .45rem .9rem;
        transition: transform .12s ease, box-shadow .12s ease;
    }

        .btn-pill:hover {
            transform: translateY(-1px);
            box-shadow: 0 10px 18px rgba(0,0,0,.06);
        }
</style>
