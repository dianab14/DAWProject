@model MicroSocialPlatform.Models.Comment

<h2>Edit comment</h2>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Content</label>
        <textarea name="content" class="form-control" rows="3">@Model.Content</textarea>
    </div>

    <button class="btn btn-primary">Save</button>
    <a asp-controller="Posts" asp-action="Show" asp-route-id="@Model.PostId" class="btn btn-secondary">Cancel</a>
</form>
