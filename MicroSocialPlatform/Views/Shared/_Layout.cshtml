<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MicroSocialPlatform</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MicroSocialPlatform.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container-fluid px-4">

                <!-- LEFT: Brand + main links -->
                <div class="d-flex align-items-center gap-3">
                    <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                        MicroSocialPlatform
                    </a>

                    <ul class="navbar-nav d-none d-lg-flex">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Groups" asp-action="Index">Groups</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Posts" asp-action="Create">Create Post</a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Users" asp-action="Index">Admin</a>
                            </li>
                        }
                    </ul>
                </div>

                <!-- CENTER: Search -->
                <form class="navbar-search mx-auto d-none d-md-flex"
                      method="GET"
                      action="/Profile/Search">
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="search"
                               name="text"
                               class="form-control border-start-0"
                               placeholder="Search people"
                               value="@Context.Request.Query["text"]">
                    </div>
                </form>

                <!-- RIGHT: Login / Profile -->
                <div class="d-flex align-items-center">
                    <partial name="_LoginPartial" />
                </div>

            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">

            @if (TempData["message"] != null)
            {
                <div class="alert alert-@TempData["messageType"] alert-dismissible fade show mt-3" role="alert">
                    @TempData["message"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @RenderBody()

        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - MicroSocialPlatform
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>