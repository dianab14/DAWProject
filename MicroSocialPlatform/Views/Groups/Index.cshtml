@model List<MicroSocialPlatform.Models.Group>

@{
    var myGroupStatus = ViewBag.MyGroupStatus as Dictionary<int, string>
                        ?? new Dictionary<int, string>();
}

<h2>Groups</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Create group</a>

<br />
<br />

<div class="row">
    @foreach (var g in Model)
    {
        var status = myGroupStatus.ContainsKey(g.Id) ? myGroupStatus[g.Id] : null;

        <div class="col-4 mb-4">
            <div class="card" style="height:100%; width:100%;">
                <div class="card-body d-flex justify-content-between flex-column">

                    <!-- CONTINUT -->
                    <div>
                        <p class="d-flex align-items-center justify-content-between">
                            <span>
                                <i class="bi bi-people"></i>
                                <b>Group name:</b> @g.Name
                            </span>

                            @* TAG / BADGE *@
                            @if (status != null)
                            {
                                if (status == "Accepted")
                                {
                                    <span class="badge bg-success">Member</span>
                                }
                                else if (status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                                else if (status == "Rejected")
                                {
                                    <span class="badge bg-danger">Rejected</span>
                                }
                            }
                        </p>

                        <p>
                            <i class="bi bi-card-text"></i>
                            <b>Description:</b> @g.Description
                        </p>

                        @{
                            var modFullName = ((g.Moderator?.FirstName ?? "") + " " + (g.Moderator?.LastName ?? "")).Trim();
                            var modDisplay = string.IsNullOrWhiteSpace(modFullName)
                            ? (g.Moderator?.UserName ?? "Unknown")
                            : modFullName;
                        }

                        <p>
                            <i class="bi bi-person-badge"></i>
                            <b>Moderator:</b> @modDisplay
                        </p>


                        <p>
                            <i class="bi bi-calendar-event"></i>
                            <b>Created:</b> @g.CreatedAt.ToLocalTime()
                        </p>
                    </div>

                    <!-- BUTOANE -->
                    <div class="d-flex flex-row justify-content-between p-3">
                        <div>
                            <a asp-action="Details"
                               asp-route-id="@g.Id"
                               class="btn btn-sm btn-success">
                                View group
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</div>

<br />
<br />
