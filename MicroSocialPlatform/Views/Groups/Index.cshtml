@model List<MicroSocialPlatform.Models.Group>

@{
    var myGroupStatus = ViewBag.MyGroupStatus as Dictionary<int, string>
                        ?? new Dictionary<int, string>();

    int currentPage = ViewBag.CurrentPage ?? 1;
    int lastPage = ViewBag.LastPage ?? 1;
    string baseUrl = ViewBag.PaginationBaseUrl ?? "/Groups/Index?page";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Groups</h2>
        <a asp-action="Create" class="btn btn-primary btn-pill">
            <i class="bi bi-plus-circle me-2"></i>Create Group
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-box">
            <div class="empty-icon">✦</div>
            <div class="empty-title">No groups yet</div>
            <div class="empty-text">Create your first group to start connecting with others.</div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var g in Model)
            {
                var status = myGroupStatus.ContainsKey(g.Id) ? myGroupStatus[g.Id] : null;

                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <div class="group-card">
                        <div class="group-card-body">

                            <!-- HEADER -->
                            <div class="group-header mb-3">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="group-name mb-0">
                                        <i class="bi bi-people me-2"></i>@g.Name
                                    </h5>
                                    @* TAG / BADGE *@
                                    @if (status != null)
                                    {
                                        if (status == "Accepted")
                                        {
                                            <span class="badge badge-member">Member</span>
                                        }
                                        else if (status == "Pending")
                                        {
                                            <span class="badge badge-pending">Pending</span>
                                        }
                                        else if (status == "Rejected")
                                        {
                                            <span class="badge badge-rejected">Rejected</span>
                                        }
                                    }
                                </div>
                            </div>

                            <!-- DESCRIPTION -->
                            <div class="group-description mb-3">
                                <i class="bi bi-card-text me-2"></i>
                                <span class="group-description-text">@g.Description</span>
                            </div>

                            <!-- MODERATOR -->
                            @{
                                var modFullName = ((g.Moderator?.FirstName ?? "") + " " + (g.Moderator?.LastName ?? "")).Trim();
                                var modDisplay = string.IsNullOrWhiteSpace(modFullName)
                                ? (g.Moderator?.UserName ?? "Unknown")
                                : modFullName;
                            }
                            <div class="group-meta mb-2">
                                <i class="bi bi-person-badge me-2"></i>
                                <span class="group-meta-label">Moderator:</span> @modDisplay
                            </div>

                            <!-- CREATED DATE -->
                            <div class="group-meta mb-3">
                                <i class="bi bi-calendar-event me-2"></i>
                                <span class="group-meta-label">Created:</span> @g.CreatedAt.ToLocalTime()
                            </div>

                            <!-- BUTON -->
                            <div class="group-button-wrapper">
                                <a asp-action="Details"
                                   asp-route-id="@g.Id"
                                   class="btn btn-primary btn-pill w-100">
                                    <i class="bi bi-eye me-2"></i>View Group
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @if (lastPage > 1)
    {
        <div class="d-flex justify-content-center mt-4">
            <nav aria-label="Groups pagination">
                <ul class="pagination">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="@(baseUrl + "=1")">&laquo;</a>
                    </li>

                    @for (int i = 1; i <= lastPage; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="@(baseUrl + "=" + i)">@i</a>
                        </li>
                    }

                    <li class="page-item @(currentPage == lastPage ? "disabled" : "")">
                        <a class="page-link" href="@(baseUrl + "=" + lastPage)">&raquo;</a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

<style>
    body {
        background: #f6efe3;
    }

    .group-card {
        border-radius: 16px;
        background: rgba(255,255,255,.92);
        border: 1px solid rgba(0,0,0,.06);
        box-shadow: 0 10px 26px rgba(0,0,0,.06);
        transition: transform .15s ease, box-shadow .15s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .group-card:hover {
            transform: translateY(-1px);
            box-shadow: 0 14px 34px rgba(0,0,0,.08);
        }

    .group-card-body {
        padding: 20px;
        display: flex;
        flex-direction: column;
        height: 100%;
        min-height: 320px; /* înălțime minimă fixă */
    }

    .group-header {
        flex-shrink: 0;
    }

    .group-name {
        font-weight: 800;
        color: #111827;
        font-size: 1.1rem;
        line-height: 1.3;
    }

    .group-description {
        color: #6c757d;
        font-size: 0.95rem;
        line-height: 1.5;
        flex: 1;
        min-height: 0;
        overflow: hidden;
    }

    .group-description-text {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        line-height: 1.5;
    }

    .group-meta {
        color: #6c757d;
        font-size: 0.88rem;
        flex-shrink: 0;
    }

    .group-meta-label {
        font-weight: 600;
        color: #3a3a3a;
    }

    .group-button-wrapper {
        margin-top: auto;
        padding-top: 16px;
        flex-shrink: 0;
    }

    .badge-member {
        background-color: var(--beige-medium) !important;
        color: var(--text-dark) !important;
        padding: 0.4em 0.8em;
        font-weight: 600;
        border-radius: 6px;
        font-size: 0.85em;
    }

    .badge-pending {
        background-color: var(--beige-dark) !important;
        color: var(--text-dark) !important;
        padding: 0.4em 0.8em;
        font-weight: 600;
        border-radius: 6px;
        font-size: 0.85em;
    }

    .badge-rejected {
        background-color: var(--beige-dark) !important;
        color: var(--text-dark) !important;
        padding: 0.4em 0.8em;
        font-weight: 600;
        border-radius: 6px;
        font-size: 0.85em;
    }

    .empty-box {
        border-radius: 16px;
        background: rgba(255,255,255,.85);
        border: 1px dashed rgba(0,0,0,.12);
        padding: 48px 24px;
        text-align: center;
        box-shadow: 0 10px 22px rgba(0,0,0,.05);
    }

    .empty-icon {
        font-size: 2rem;
        opacity: .9;
        margin-bottom: 12px;
    }

    .empty-title {
        font-weight: 800;
        font-size: 1.2rem;
        margin-bottom: 8px;
        color: #111827;
    }

    .empty-text {
        color: #6c757d;
        font-size: 0.95rem;
    }

    .btn-pill {
        border-radius: 999px !important;
        font-weight: 700;
        padding: .45rem .9rem;
        transition: transform .12s ease, box-shadow .12s ease;
    }

        .btn-pill:hover {
            transform: translateY(-1px);
            box-shadow: 0 10px 18px rgba(0,0,0,.06);
        }
</style>
