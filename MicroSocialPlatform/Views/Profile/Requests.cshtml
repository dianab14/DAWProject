@model List<Follow>

<h2>Follow requests</h2>

@if (!Model.Any())
{
    <p>No pending requests.</p>
}
else
{
    @foreach (var req in Model)
    {
        <div class="card mb-3">
            <div class="card-body">
                <strong>
                    @req.Follower.FirstName @req.Follower.LastName
                </strong>

                <div class="mt-2">
                    <form asp-action="Accept" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@req.Id" />
                        <button class="btn btn-success btn-sm">
                            Accept
                        </button>
                    </form>

                    <form asp-action="Decline" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@req.Id" />
                        <button class="btn btn-danger btn-sm">
                            Decline
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
}
