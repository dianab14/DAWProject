<img src="@(Model.ProfileImagePath)"
     class="rounded-circle mb-3"
     width="120" height="120" />

<h4>@Model.FirstName @Model.LastName</h4>
@if (ViewBag.IsMyProfile)
{
    <p class="text-muted">@Model.Email</p>
}

<p>@Model.Description</p>

<div class="d-flex justify-content-center gap-4 mt-3">
    <a asp-action="Followers"
       asp-route-id="@Model.Id"
       class="text-decoration-none text-dark">
        <strong>@ViewBag.FollowersCount</strong><br />
        <span class="text-muted">Followers</span>
    </a>

    <a asp-action="Following"
       asp-route-id="@Model.Id"
       class="text-decoration-none text-dark">
        <strong>@ViewBag.FollowingCount</strong><br />
        <span class="text-muted">Following</span>
    </a>
</div>

<p class="mt-2">
    @if (Model.IsPrivate)
    {
        <span class="text-danger">
            <i class="bi bi-lock-fill"></i>
            Private account
        </span>
    }
    else
    {
        <span class="text-success">
            <i class="bi bi-globe"></i>
            Public account
        </span>
    }
</p>


<p class="text-muted">
    Member since: @Model.CreatedAt.ToLocalTime().ToString("dd MMM yyyy")
</p>

@if (ViewBag.IsMyProfile)
{
    <a asp-action="Edit" class="btn btn-primary mt-3">
        <i class="bi bi-pencil"></i> Edit profile
    </a>
}

@if (ViewBag.IsMyProfile && Model.IsPrivate)
{
    <a asp-action="Requests"
       class="btn btn-outline-primary mt-3">
        <i class="bi bi-inbox"></i> Follow requests

        @if ((int)(ViewBag.PendingRequestsCount ?? 0) > 0)
        {
            <span class="badge bg-danger ms-1">
                @ViewBag.PendingRequestsCount
            </span>
        }
    </a>
}
