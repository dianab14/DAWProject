        display: flex;
        justify-content: center;
        margin-bottom: 1.5rem;
    }

    .profile-avatar-img {
        width: 140px;
        height: 140px;
        border-radius: 999px;
        object-fit: cover;
        border: 4px solid rgba(255,255,255,.95);
        box-shadow: 0 12px 28px rgba(0,0,0,.12);
        background: #fff;
    }


    .profile-name {
        font-weight: 800;
        font-size: 1.75rem;
        color: #111827;
        letter-spacing: -0.02em;
    }

    .profile-email {
        color: #6c757d;
        font-size: 0.95rem;
        margin-bottom: 1rem;
    }

    .profile-description {
        color: #3a3a3a;
        font-size: 1rem;
        line-height: 1.6;
        max-width: 600px;
        margin: 0 auto 1.5rem;
    }

    .profile-stats {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        padding: 1.5rem 0;
        border-top: 1px solid rgba(0,0,0,.08);
        border-bottom: 1px solid rgba(0,0,0,.08);
        margin: 0 auto;
        max-width: 400px;
    }

    .profile-stat-item {
        text-decoration: none;
        color: inherit;
        transition: transform 0.2s ease;
        flex: 1;
        text-align: center;
    }

        .profile-stat-item:hover {
            transform: translateY(-2px);
            color: inherit;
        }

    .profile-stat-number {
        font-weight: 800;
        font-size: 1.5rem;
        color: #111827;
        line-height: 1.2;
    }

    .profile-stat-label {
        color: #6c757d;
        font-size: 0.9rem;
        margin-top: 4px;
    }

    .profile-stat-divider {
        width: 1px;
        height: 40px;
        background: rgba(0,0,0,.1);
    }

    .profile-meta-info {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        align-items: center;
    }

    .profile-status-badge {
        margin-bottom: 0.5rem;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        padding: 0.4em 0.9em;
        border-radius: 999px;
        font-weight: 600;
        font-size: 0.85rem;
    }

    .status-private {
        background: rgba(220, 53, 69, 0.1);
        color: #dc3545;
    }

    .status-public {
        background: rgba(25, 135, 84, 0.1);
        color: #198754;
    }

    .profile-member-since {
        color: #6c757d;
        font-size: 0.88rem;
    }

    .profile-actions {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.75rem;
        margin-top: 1.5rem;
    }

    .badge-notification {
        background: linear-gradient(135deg, rgba(220, 53, 69, 0.95), rgba(220, 53, 69, 0.85)) !important;
        color: #fff !important;
        padding: 0.25em 0.6em;
        border-radius: 999px;
        font-weight: 700;
        font-size: 0.75rem;
    }

    .btn-pill {
        border-radius: 999px !important;
        font-weight: 700;
        padding: .5rem 1.25rem;
        transition: transform .12s ease, box-shadow .12s ease;
    }

        .btn-pill:hover {
            transform: translateY(-1px);
            box-shadow: 0 10px 18px rgba(0,0,0,.06);
        }
</style>