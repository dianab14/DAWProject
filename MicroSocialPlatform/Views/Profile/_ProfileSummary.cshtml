@{
    var fullName = ((Model.FirstName ?? "") + " " + (Model.LastName ?? "")).Trim();
    var displayName = string.IsNullOrWhiteSpace(fullName) ? Model.UserName : fullName;
}

<!-- Avatar -->
<div class="profile-avatar-wrapper mb-4">
    <img src="@Model.ProfileImagePath"
         class="profile-avatar-img"
         alt="Profile photo" />
</div>

<!-- Name -->
<h3 class="profile-name mb-2">@displayName</h3>

<!-- Email (only for my profile) -->
@if (ViewBag.IsMyProfile)
{
    <p class="profile-email mb-3">
        <i class="bi bi-envelope me-2"></i>@Model.Email
    </p>
}

<!-- Description -->
@if (!string.IsNullOrWhiteSpace(Model.Description))
{
    <p class="profile-description mb-4">@Model.Description</p>
}

<!-- Stats -->
<div class="profile-stats mb-4">
    <a asp-action="Followers"
       asp-route-id="@Model.Id"
       class="profile-stat-item">
        <div class="profile-stat-number">@ViewBag.FollowersCount</div>
        <div class="profile-stat-label">Followers</div>
    </a>

    <div class="profile-stat-divider"></div>

    <a asp-action="Following"
       asp-route-id="@Model.Id"
       class="profile-stat-item">
        <div class="profile-stat-number">@ViewBag.FollowingCount</div>
        <div class="profile-stat-label">Following</div>
    </a>
</div>

<!-- Account Status & Member Since -->
<div class="profile-meta-info mb-4">
    <div class="profile-status-badge">
        @if (Model.IsPrivate)
        {
            <span class="status-badge status-private">
                <i class="bi bi-lock-fill me-1"></i>Private Account
            </span>
        }
        else
        {
            <span class="status-badge status-public">
                <i class="bi bi-globe me-1"></i>Public Account
            </span>
        }
    </div>

    <div class="profile-member-since">
        <i class="bi bi-calendar3 me-2"></i>
        Member since @Model.CreatedAt.ToLocalTime().ToString("MMM yyyy")
    </div>
</div>

<!-- Action Buttons -->
<div class="profile-actions">
    @if (ViewBag.IsMyProfile)
    {
        <a asp-action="Edit" class="btn btn-primary btn-pill">
            <i class="bi bi-pencil me-2"></i>Edit Profile
        </a>
    }

    @if (ViewBag.IsMyProfile && Model.IsPrivate)
    {
        <a asp-action="Requests" class="btn btn-outline-primary btn-pill mt-2">
            <i class="bi bi-inbox me-2"></i>Follow Requests
            @if ((int)(ViewBag.PendingRequestsCount ?? 0) > 0)
            {
                <span class="badge badge-notification ms-2">
                    @ViewBag.PendingRequestsCount
                </span>
            }
        </a>
    }
</div>

<style>
