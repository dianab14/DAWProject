@model MicroSocialPlatform.Models.ApplicationUser


@if (Model.IsDeleted)
{
    <h2>User not found</h2>
    return;
}

<div class="card mx-auto" style="max-width: 1000px;">
    <div class="card-body text-center">

        <partial name="_ProfileSummary.cshtml" />
        @using System.Security.Claims
        @using MicroSocialPlatform.Models

        @{
            var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
            var follow = ViewBag.Follow as Follow;
        }

        @if (User.Identity.IsAuthenticated && !ViewBag.IsMyProfile)
        {
            <div class="mt-3">

                @if (follow == null)
                {
                    <form asp-action="Follow" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button class="btn btn-primary">
                            <i class="bi bi-person-plus"></i> Follow
                        </button>
                    </form>
                }
                else if (follow.Status == "Pending")
                {
                    <form asp-action="Unfollow" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button class="btn btn-outline-warning"
                                title="Waiting for approval">
                            <i class="bi bi-hourglass-split"></i> Request sent
                        </button>
                    </form>
                }
                else if (follow.Status == "Accepted")
                {
                    <form asp-action="Unfollow" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button class="btn btn-secondary">
                            <i class="bi bi-person-check"></i> Following
                        </button>
                    </form>
                }

            </div>
        }

    </div>
</div>

@{
    var posts = ViewBag.Posts as List<MicroSocialPlatform.Models.Post> ?? new();
}

@if (ViewBag.IsPrivateView)
{
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-12" style="max-width: 1000px;">
                <div class="alert alert-warning text-center shadow-sm">
                    @if (!User.Identity.IsAuthenticated) { 
                        <span>Please log in and follow this account to see more.</span> 
                    } 
                    else 
                    { 
                        <span>This account is private. Follow to see the full profile.</span> 
                    } 
                    </div>
                </div>
            </div>
        </div>
}
else
{
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-12" style="max-width: 1000px;">

                <!-- HEADER: Posts centrat + buton in dreapta -->
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <div style="width:140px;"></div>

                    <div class="text-center flex-grow-1">
                        <h4 class="mb-1">Posts</h4>
                        <div class="mx-auto" style="height:3px; width:70px; border-radius:999px; background:#e9ecef;"></div>
                    </div>

                    <div style="width:140px;" class="text-end">
                        @if (ViewBag.IsMyProfile)
                        {
                            <a asp-controller="Posts" asp-action="Create" class="btn btn-primary">
                                Create Post
                            </a>
                        }
                    </div>
                </div>

                @if (!posts.Any())
                {
                    <div class="card shadow-sm">
                        <div class="card-body text-center text-muted py-4">
                            <div class="mb-2">
                                <i class="bi bi-journal-text" style="font-size: 2rem;"></i>
                            </div>
                            <div>No posts yet.</div>
                        </div>
                    </div>
                }
                else
                {
                    <!-- FEED centrat, lățime social -->
                    <div class="row justify-content-center">
                        <div class="col-12 col-md-10 col-lg-8">

                            @foreach (var p in posts)
                            {
                                <div class="card mb-4 shadow-sm" style="border-radius: 14px;">
                                    <div class="card-body">

                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div class="text-muted" style="font-size:0.9rem;">
                                                @p.CreatedAt.ToLocalTime()
                                                @if (p.UpdatedAt != null)
                                                {
                                                    <span> • edited</span>
                                                }
                                            </div>
                                        </div>

                                        @if (!string.IsNullOrEmpty(p.Content))
                                        {
                                            <p class="mb-3" style="white-space: pre-wrap;">@p.Content</p>
                                        }

                                        @if (!string.IsNullOrEmpty(p.ImagePath))
                                        {
                                            <div class="mb-3">
                                                <img src="@p.ImagePath"
                                                     class="img-fluid"
                                                     style="width:100%; border-radius: 14px; object-fit:cover;" />
                                            </div>
                                        }

                                        @if (!string.IsNullOrEmpty(p.VideoPath))
                                        {
                                            <div class="mb-3">
                                                <video controls class="w-100" style="border-radius: 14px;">
                                                    <source src="@p.VideoPath" />
                                                </video>
                                            </div>
                                        }

                                        <div class="d-flex justify-content-end">
                                            <a asp-controller="Posts"
                                               asp-action="Show"
                                               asp-route-id="@p.Id"
                                               class="btn btn-sm btn-outline-success">
                                                View
                                            </a>
                                        </div>

                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
}
