@using MicroSocialPlatform.Models
@{
    ViewData["Title"] = "Home Page";
    var following = ViewBag.FollowingPosts as List<Post> ?? new();
    var discover = ViewBag.DiscoverPosts as List<Post> ?? new();
}

<div class="container mt-4">
    <div class="hero-card mb-4">
        <div class="text-center mt-4">
            <h1 class="display-4">Welcome to MicroSocialPlatform</h1>

            <p class="lead">
                Discover users, join groups, and share content.
            </p>

            @if (User.IsInRole("Admin"))
            {
                <span class="badge bg-danger">Admin</span>
            }
        </div>

        <div class="hero-divider my-3"></div>

        <!-- FOLLOWING / DISCOVER SWITCH -->
        <div class="d-flex justify-content-center">
            <div class="follow-switch" role="tablist" aria-label="Feed switch">
                <button type="button" class="follow-tab active" data-target="followingPanel">
                    My Feed
                </button>
                <button type="button" class="follow-tab" data-target="discoverPanel">
                    Discover
                </button>
                <div class="follow-indicator"></div>
            </div>
        </div>
    </div>

    <!-- FEED (swipe) -->
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-7 col-xl-6">

            <div class="feed-slider">

                <!-- MY FEED -->
                <div id="followingPanel" class="feed-panel active">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <div class="info-box">
                            <div class="info-icon">i</div>
                            <div>
                                <div class="info-title">You are not logged in</div>
                                <div class="info-text">Log in to see your feed.</div>
                            </div>
                        </div>
                    }
                    else if (!following.Any())
                    {
                        <div class="empty-box">
                            <div class="empty-icon">✦</div>
                            <div class="empty-title">No posts yet</div>
                            <div class="empty-text">Your feed will show posts from people you follow.</div>
                        </div>
                    }
                    else
                    {
                        @foreach (var p in following)
                        {
                            <div class="post-card">
                                <div class="post-card-body">

                                    @{
                                        var fullName = ((p.User?.FirstName ?? "") + " " + (p.User?.LastName ?? "")).Trim();
                                        var displayName = string.IsNullOrWhiteSpace(fullName)
                                        ? (p.User?.UserName ?? "Unknown")
                                        : fullName;

                                        var profileImg = p.User?.ProfileImagePath;
                                        bool hasProfileImg =
                                        !string.IsNullOrWhiteSpace(profileImg) &&
                                        profileImg != "/images/profiles/default-profile.png";

                                        var initials = string.Join("",
                                        displayName.Split(' ', StringSplitOptions.RemoveEmptyEntries)
                                        .Select(s => s[0])
                                        .Take(2)).ToUpper();

                                        bool isAdmin = User.IsInRole("Admin");
                                    }

                                    <div class="d-flex justify-content-between align-items-start gap-2">
                                        <div class="d-flex align-items-start gap-3">
                                            <a asp-controller="Profile" asp-action="Show" asp-route-id="@p.UserId" class="avatar-link">
                                                @if (hasProfileImg)
                                                {
                                                    <img src="@profileImg" class="avatar-img" alt="Profile photo" />
                                                }
                                                else
                                                {
                                                    <div class="avatar-circle">@initials</div>
                                                }
                                            </a>

                                            <div>
                                                <a class="post-author profile-link"
                                                   asp-controller="Profile"
                                                   asp-action="Show"
                                                   asp-route-id="@p.UserId">
                                                    @displayName
                                                </a>

                                                <div class="post-meta">@p.CreatedAt.ToLocalTime()</div>
                                            </div>
                                        </div>

                                        <div class="d-flex gap-2">
                                            @if (isAdmin)
                                            {
                                                <form asp-controller="Posts" asp-action="Delete" method="post" class="m-0">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@p.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger btn-pill">
                                                        Delete
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </div>

                                    @if (!string.IsNullOrEmpty(p.Content))
                                    {
                                        <div class="post-content mt-3">@p.Content</div>
                                    }

                                    @if (!string.IsNullOrEmpty(p.ImagePath))
                                    {
                                        <div class="media-wrap mt-3">
                                            <img src="@p.ImagePath" class="media-img" />
                                        </div>
                                    }

                                    @if (!string.IsNullOrEmpty(p.VideoPath))
                                    {
                                        <div class="media-wrap mt-3">
                                            <video controls class="media-video">
                                                <source src="@p.VideoPath" />
                                            </video>
                                        </div>
                                    }

                                    <div class="d-flex justify-content-end mt-3">
                                        <a asp-controller="Posts"
                                           asp-action="Show"
                                           asp-route-id="@p.Id"
                                           class="btn btn-sm btn-outline-success btn-pill">
                                            View
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>

                <!-- DISCOVER -->
                <div id="discoverPanel" class="feed-panel">
                    @if (!discover.Any())
                    {
                        <div class="empty-box">
                            <div class="empty-icon">✦</div>
                            <div class="empty-title">Nothing to discover yet</div>
                            <div class="empty-text">When users post, you will see content here.</div>
                        </div>
                    }
                    else
                    {
                        @foreach (var p in discover)
                        {
                            <div class="post-card">
                                <div class="post-card-body">

                                    @{
                                        var fullName = ((p.User?.FirstName ?? "") + " " + (p.User?.LastName ?? "")).Trim();
                                        var displayName = string.IsNullOrWhiteSpace(fullName)
                                        ? (p.User?.UserName ?? "Unknown")
                                        : fullName;

                                        var profileImg = p.User?.ProfileImagePath;
                                        bool hasProfileImg =
                                        !string.IsNullOrWhiteSpace(profileImg) &&
                                        profileImg != "/images/profiles/default-profile.png";

                                        var initials = string.Join("",
                                        displayName.Split(' ', StringSplitOptions.RemoveEmptyEntries)
                                        .Select(s => s[0])
                                        .Take(2)).ToUpper();

                                        bool isAdmin = User.IsInRole("Admin");
                                    }

                                    <div class="d-flex justify-content-between align-items-start gap-2">
                                        <div class="d-flex align-items-start gap-3">
                                            <a asp-controller="Profile" asp-action="Show" asp-route-id="@p.UserId" class="avatar-link">
                                                @if (hasProfileImg)
                                                {
                                                    <img src="@profileImg" class="avatar-img" alt="Profile photo" />
                                                }
                                                else
                                                {
                                                    <div class="avatar-circle">@initials</div>
                                                }
                                            </a>

                                            <div>
                                                <a class="post-author profile-link"
                                                   asp-controller="Profile"
                                                   asp-action="Show"
                                                   asp-route-id="@p.UserId">
                                                    @displayName
                                                </a>

                                                <div class="post-meta">@p.CreatedAt.ToLocalTime()</div>
                                            </div>
                                        </div>

                                        <div class="d-flex gap-2">
                                            @if (isAdmin)
                                            {
                                                <form asp-controller="Posts" asp-action="Delete" method="post" class="m-0">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@p.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger btn-pill">
                                                        Delete
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </div>

                                    @if (!string.IsNullOrEmpty(p.Content))
                                    {
                                        <div class="post-content mt-3">@p.Content</div>
                                    }

                                    @if (!string.IsNullOrEmpty(p.ImagePath))
                                    {
                                        <div class="media-wrap mt-3">
                                            <img src="@p.ImagePath" class="media-img" />
                                        </div>
                                    }

                                    @if (!string.IsNullOrEmpty(p.VideoPath))
                                    {
                                        <div class="media-wrap mt-3">
                                            <video controls class="media-video">
                                                <source src="@p.VideoPath" />
                                            </video>
                                        </div>
                                    }

                                    <div class="d-flex justify-content-end mt-3">
                                        <a asp-controller="Posts"
                                           asp-action="Show"
                                           asp-route-id="@p.Id"
                                           class="btn btn-sm btn-outline-success btn-pill">
                                            View
                                        </a>
                                    </div>

                                </div>
                            </div>
                        }
                    }
                </div>

            </div>

        </div>
    </div>
</div>

<style>
    body {
        background: #f6efe3;
    }

    .hero-card {
        border-radius: 18px;
        padding: 20px 22px;
        background: linear-gradient(135deg, rgba(13,110,253,.12), rgba(111,66,193,.10));
        border: 1px solid rgba(13,110,253,.12);
        box-shadow: 0 10px 30px rgba(0,0,0,.06);
    }

    .hero-divider {
        height: 1px;
        background: rgba(0,0,0,.06);
        border-radius: 999px;
    }

    .follow-switch {
        position: relative;
        display: inline-flex;
        padding: 6px;
        border-radius: 999px;
        background: rgba(255,255,255,.75);
        border: 1px solid rgba(0,0,0,.06);
        box-shadow: 0 6px 16px rgba(0,0,0,.06);
        backdrop-filter: blur(6px);
        overflow: hidden;
        gap: 6px;
        min-width: 300px;
    }

    .follow-tab {
        border: 0;
        background: transparent;
        padding: 10px 24px;
        border-radius: 999px;
        font-weight: 800;
        color: #6c757d;
        position: relative;
        z-index: 2;
        min-width: 0;
        transition: color .2s ease, transform .12s ease;
        flex: 1 1 0;
        white-space: nowrap;
    }

        .follow-tab:hover {
            transform: translateY(-1px);
        }

        .follow-tab.active {
            color: #111827;
        }

    .follow-indicator {
        position: absolute;
        top: 6px;
        bottom: 6px;
        left: 6px;
        width: calc(50% - 6px);
        border-radius: 999px;
        background: linear-gradient(135deg, rgba(13,110,253,.95), rgba(111,66,193,.85));
        box-shadow: 0 6px 16px rgba(13,110,253,.20);
        transition: transform .25s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: 1;
    }

    /* FEED */
    .feed-slider {
        position: relative;
        overflow: hidden;
        min-height: 200px;
    }

    .feed-panel {
        width: 100%;
        transition: transform .25s ease, opacity .25s ease;
        transform: translateX(100%);
        opacity: 0;
        position: absolute;
        top: 0;
        left: 0;
    }

        .feed-panel.active {
            position: relative;
            transform: translateX(0);
            opacity: 1;
        }

        .feed-panel.to-left {
            transform: translateX(-100%);
            opacity: 0;
        }

        .feed-panel.to-right {
            transform: translateX(100%);
            opacity: 0;
        }

    /* POST */
    .post-card {
        border-radius: 16px;
        background: rgba(255,255,255,.92);
        border: 1px solid rgba(0,0,0,.06);
        box-shadow: 0 10px 26px rgba(0,0,0,.06);
        margin-bottom: 16px;
        transition: transform .15s ease, box-shadow .15s ease;
    }

        .post-card:hover {
            transform: translateY(-1px);
            box-shadow: 0 14px 34px rgba(0,0,0,.08);
        }

    .post-card-body {
        padding: 16px;
    }

    .avatar-circle {
        width: 42px;
        height: 42px;
        border-radius: 999px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 800;
        color: #fff;
        background: linear-gradient(135deg, rgba(13,110,253,.95), rgba(111,66,193,.85));
        box-shadow: 0 10px 20px rgba(13,110,253,.18);
        flex: 0 0 auto;
    }

    .avatar-img {
        width: 42px;
        height: 42px;
        border-radius: 999px;
        object-fit: cover;
        border: 2px solid rgba(255,255,255,.9);
        box-shadow: 0 10px 20px rgba(0,0,0,.10);
        background: #fff;
        flex: 0 0 auto;
    }

    .post-author {
        font-weight: 800;
        line-height: 1.1;
        display: inline-block;
    }

    .post-meta {
        color: #6c757d;
        font-size: .88rem;
        margin-top: 2px;
    }

    .post-content {
        white-space: pre-wrap;
        color: #111827;
        font-size: 1rem;
        line-height: 1.45;
    }

    .media-wrap {
        border-radius: 14px;
        overflow: hidden;
        border: 1px solid rgba(0,0,0,.06);
        background: #fff;
    }

    .media-img {
        width: 100%;
        display: block;
        object-fit: cover;
    }

    .media-video {
        width: 100%;
        display: block;
    }

    .empty-box, .info-box {
        border-radius: 16px;
        background: rgba(255,255,255,.85);
        border: 1px dashed rgba(0,0,0,.12);
        padding: 18px;
        text-align: center;
        box-shadow: 0 10px 22px rgba(0,0,0,.05);
    }

    .info-box {
        display: flex;
        gap: 12px;
        align-items: center;
        text-align: left;
        border-style: solid;
    }

    .info-icon {
        width: 34px;
        height: 34px;
        border-radius: 999px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 800;
        color: #0d6efd;
        background: rgba(13,110,253,.12);
        flex: 0 0 auto;
    }

    .empty-icon {
        font-size: 1.4rem;
        opacity: .9;
        margin-bottom: 6px;
    }

    .empty-title, .info-title {
        font-weight: 800;
        margin-bottom: 2px;
    }

    .empty-text, .info-text {
        color: #6c757d;
        margin: 0;
    }

    /* Links */
    .profile-link {
        text-decoration: none;
        color: inherit;
    }

        .profile-link:hover {
            text-decoration: underline;
        }

    .avatar-link {
        display: inline-flex;
        text-decoration: none;
    }

    .btn-pill {
        border-radius: 999px !important;
        font-weight: 700;
        padding: .45rem .9rem;
        transition: transform .12s ease, box-shadow .12s ease;
    }

        .btn-pill:hover {
            transform: translateY(-1px);
            box-shadow: 0 10px 18px rgba(0,0,0,.06);
        }
</style>

<script>
    (function () {
        const tabs = document.querySelectorAll(".follow-tab");
        const indicator = document.querySelector(".follow-indicator");
        const switchContainer = document.querySelector(".follow-switch");

        let current = "followingPanel";

        function updateIndicatorPosition(activeIndex) {
            if (!indicator || !switchContainer) return;

            const activeTab = tabs[activeIndex];
            const containerRect = switchContainer.getBoundingClientRect();
            const tabRect = activeTab.getBoundingClientRect();

            const relativeLeft = tabRect.left - containerRect.left;
            const indicatorLeft = relativeLeft - 6;

            indicator.style.transform = `translateX(${indicatorLeft}px)`;
        }

        function show(targetId) {
            if (targetId === current) return;

            const from = document.getElementById(current);
            const to = document.getElementById(targetId);

            const isToRight = (current === "followingPanel" && targetId === "discoverPanel");

            from.classList.remove("active");
            from.classList.add(isToRight ? "to-left" : "to-right");

            to.classList.remove("to-left", "to-right");
            to.classList.add("active");

            setTimeout(() => {
                from.classList.remove("to-left", "to-right");
            }, 300);

            current = targetId;
        }

        tabs.forEach((btn, idx) => {
            btn.addEventListener("click", () => {
                tabs.forEach(t => t.classList.remove("active"));
                btn.classList.add("active");

                updateIndicatorPosition(idx);
                show(btn.dataset.target);
            });
        });

        const initialActiveIndex = Array.from(tabs).findIndex(t => t.classList.contains("active"));
        if (initialActiveIndex >= 0) {
            updateIndicatorPosition(initialActiveIndex);
        }
    })();
</script>
