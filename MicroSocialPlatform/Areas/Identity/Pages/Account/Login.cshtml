@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}
<div class="auth-login">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8 col-xl-7">

                <!-- CARD -->
                <div class="auth-card">
                    <div class="row g-0">

                        <!-- LEFT: FORM -->
                        <div class="col-md-6 p-4 p-md-5">
                            <h2 class="auth-title">Welcome back</h2>
                            <p class="auth-subtitle">Log in to continue</p>

                            <form id="account" method="post" class="mt-4">
                                <div asp-validation-summary="ModelOnly"
                                     class="text-danger mb-3"
                                     role="alert"></div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Email"
                                           class="form-control auth-input"
                                           placeholder="name@example.com"
                                           autocomplete="username"
                                           aria-required="true" />
                                    <label asp-for="Input.Email">Email</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Password"
                                           class="form-control auth-input"
                                           placeholder="password"
                                           autocomplete="current-password"
                                           aria-required="true" />
                                    <label asp-for="Input.Password">Password</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               asp-for="Input.RememberMe" />
                                        <label class="form-check-label"
                                               asp-for="Input.RememberMe">
                                            Remember me
                                        </label>
                                    </div>

                                    <a asp-page="./ForgotPassword"
                                       class="auth-link">
                                        Forgot?
                                    </a>
                                </div>

                                <button id="login-submit"
                                        type="submit"
                                        class="btn btn-primary w-100 btn-pill">
                                    Log in
                                </button>

                                <div class="auth-links mt-4">
                                    <a asp-page="./Register"
                                       asp-route-returnUrl="@Model.ReturnUrl">
                                        Create an account
                                    </a>
                                    ·
                                    <a asp-page="./ResendEmailConfirmation">
                                        Resend confirmation
                                    </a>
                                </div>
                            </form>
                        </div>

                        <!-- RIGHT: INFO / EXTERNAL -->
                        <div class="col-md-6 auth-side d-flex flex-column justify-content-center p-4 p-md-5">
                            <h3 class="auth-side-title">MicroSocialPlatform</h3>
                            <p class="auth-side-text">
                                Discover users, join groups, and share content with people you follow.
                            </p>

                            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                            {
                                <form asp-page="./ExternalLogin"
                                      asp-route-returnUrl="@Model.ReturnUrl"
                                      method="post"
                                      class="mt-3">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit"
                                                class="btn btn-outline-light btn-pill w-100 mb-2"
                                                name="provider"
                                                value="@provider.Name">
                                            Continue with @provider.DisplayName
                                        </button>
                                    }
                                </form>
                            }
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<style>
    .auth-login .auth-card {
        background: rgba(255,255,255,.92);
        border-radius: 20px;
        border: 1px solid rgba(0,0,0,.06);
        box-shadow: 0 20px 40px rgba(0,0,0,.08);
        overflow: hidden;
    }

    /* titles */
    .auth-login .auth-title {
        font-weight: 900;
        line-height: 1.15;
        margin-bottom: 8px;
    }

    .auth-login .auth-subtitle {
        color: #6c757d;
        line-height: 1.5;
        margin-bottom: 14px;
    }


    /* inputs */
    .auth-login .auth-input {
        border-radius: 14px;
    }

    /* links */
    .auth-login .auth-link {
        font-size: .9rem;
        text-decoration: none;
        font-weight: 600;
    }

        .auth-login .auth-link:hover {
            text-decoration: underline;
        }

    .auth-login .auth-links {
        text-align: center;
        font-size: .9rem;
    }

        .auth-login .auth-links a {
            text-decoration: none;
            font-weight: 600;
        }

    /* right side panel */
    .auth-login .auth-side {
        background: linear-gradient( 135deg, rgba(13,110,253,.95), rgba(111,66,193,.9) );
        color: #fff;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 64px;
        align-items: flex-start;
    }

    .auth-login .auth-side-title {
        font-weight: 900;
        font-size: 1.5rem;
        line-height: 1.25;
        max-width: 380px;
        margin-bottom: 14px;
        word-break: break-word;
        overflow-wrap: break-word;
    }

    .auth-login .auth-side-text {
        font-size: 1rem;
        line-height: 1.55;
        max-width: 380px;
        opacity: .95;
    }

    /* buttons */
    .auth-login .btn-pill {
        border-radius: 999px !important;
        font-weight: 700;
        padding: .55rem 1.1rem;
    }

</style>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
