@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-7 col-xl-6">

            <div class="auth-card">
                <div class="text-center mb-3">
                    <h2 class="fw-bold">Create account</h2>
                    <p class="text-muted mb-0">
                        Join MicroSocialPlatform
                    </p>
                </div>

                <div class="hero-divider my-3"></div>

                <form method="post" asp-route-returnUrl="@Model.ReturnUrl" novalidate>

                    <div asp-validation-summary="ModelOnly"
                         class="alert alert-danger py-2 mb-3"
                         role="alert"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.FirstName" class="form-label"></label>
                            <input asp-for="Input.FirstName" class="form-control auth-input" />
                            <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.LastName" class="form-label"></label>
                            <input asp-for="Input.LastName" class="form-control auth-input" />
                            <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control auth-input" />
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-control auth-input" />
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control auth-input" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <button type="submit"
                            class="btn btn-primary w-100 btn-pill auth-btn">
                        Create account
                    </button>

                    <div class="text-center mt-3">
                        <span class="text-muted">Already have an account?</span>
                        <a asp-page="./Login"
                           class="fw-bold text-decoration-none profile-link">
                            Login
                        </a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}